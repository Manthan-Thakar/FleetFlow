rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Storage rules deferred for later configuration
    // For now, all authenticated users can read/write
    // TODO: Add proper security rules based on user roles and company isolation
    
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}

    
    // Vehicle documents and photos
    match /companies/{companyId}/vehicles/{vehicleId}/{document} {
      allow read: if belongsToCompany(companyId);
      allow write: if isManager() && belongsToCompany(companyId) &&
                     request.resource.size < 10 * 1024 * 1024;
    }
    
    // Driver documents and photos
    match /companies/{companyId}/drivers/{driverId}/{document} {
      allow read: if belongsToCompany(companyId);
      allow write: if isManager() && belongsToCompany(companyId) &&
                     request.resource.size < 10 * 1024 * 1024;
    }
    
    // Order proof of delivery (signatures and photos)
    match /companies/{companyId}/orders/{orderId}/proof-of-delivery/{fileName} {
      allow read: if belongsToCompany(companyId);
      
      // Drivers can upload POD, managers can upload/update
      allow write: if belongsToCompany(companyId) &&
                     request.resource.size < 5 * 1024 * 1024 &&
                     request.resource.contentType.matches('image/.*');
    }
    
    // Maintenance receipts
    match /companies/{companyId}/maintenance/{maintenanceId}/receipts/{fileName} {
      allow read: if belongsToCompany(companyId);
      allow write: if isManager() && belongsToCompany(companyId) &&
                     request.resource.size < 10 * 1024 * 1024;
    }
    
    // Default: Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
